<section class="window-content">
  <section class="content">
    <div class="tab active">
      <div id="afk-ready-check">
        <div class="afk-ready-content">
          <div class="player-list-container">
            <div class="flexrow buttonContainer">
              <button type="submit" name="ready" id="readyButton">
                <i class="far fa-dice-d20"></i>
                Ready!
              </button>
              <button type="button" name="afk" id="afkButton">
                <i class="fas fa-cancel"></i>
                AFK.
                {{#showCountdown this.countDownCounter}}
                  <span>
                    {{this.countDownCounter}}
                  </span>
                {{/showCountdown}}
              </button>
            </div>
            <ul class="player-list-ul">
              {{#each this.playerStatuses}}
                <li class="player-status-entry">
                  {{this.name}}
                  :
                  {{#switch this.status}}
                    {{#case 0}}
                      <i class="fas fa-dice-d20 player-not-afk"></i>
                    {{/case}}
                    {{#case 1}}
                      <i class="fas fa-dice-d20 player-afk"></i>
                    {{/case}}
                    {{#case 2}}
                      <i class="fas fa-question player-unknown"></i>
                    {{/case}}
                  {{/switch}}
                </li>
              {{/each}}
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>
</section>